<!DOCTYPE html>
<html>

<head>
  <title>Smarty</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div>
  <%= @page_title || "Smarty Store" %>
  <%= image_tag("logo_256.png", :height => 64, :width => 64)%>
</div>

<div id= "columns">
    <div id= "side">
        <a href="#">Home</a>
        <a href="#">Questions</a>
        <a href="#">News</a>
        <a href="#">Contact</a>
    </div>

    <div id="cart">
     <% if @cart %>
          <%= render @cart, :message => 'Carrito de compras' %>
     <% end %>
    </div>

    <div id="main">
        <%= yield%>
    </div>

     <div class = "clear"> </div>
</div>
</body>
</html>
